<% if object.errors.any? %>
    <div class="">
        <div class="alert alert-danger">
            Erro: <%= pluralize(object.errors.count, 'error') %>
            <ul>
                <% object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>